        color: darkslategray;
        border: none;
    }

    .txtbox {
        Width: 210px;
        Height: 25px;
        background: antiquewhite;

    }

    .btn {
        -webkit-border-radius: 10em;
        -moz-border-radius: 10em;
        border-radius: 4px;
        font-family: 'Cambria';
        color: black;
        font-size: 18px;
        background: antiquewhite;
        padding: 5px 5px 5px 5px;
        text-decoration: none;
    }

        .btn:hover {
            background-color: gray;
            text-decoration: none;
            color:white;
